pipeline {
    agent any

    tools {
        // Use the exact names you configured in Jenkins global tools
        jdk 'JDK21'
        maven 'Maven'
    }

    environment {
        IMAGE_NAME = "studentapp"
        CONTAINER_NAME = "studentapp"
        PORT = "2025"
        DATA_VOLUME = "${pwd()}/data" // Relative path for persistent H2 storage
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/NAMPALLY-PRANAY/Student-management-ci-cd.git'
            }
        }

        stage('Build with Maven') {
            steps {
                // Windows uses .\mvnw.cmd, Linux/mac uses ./mvnw
                script {
                    if (isUnix()) {
                        sh './mvnw clean package -DskipTests'
                    } else {
                        bat '.\\mvnw.cmd clean package -DskipTests'
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    if (isUnix()) {
                        sh "docker build -t ${IMAGE_NAME}:latest ."
                    } else {
                        bat "docker build -t ${IMAGE_NAME}:latest ."
                    }
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Stop and remove existing container
                    if (isUnix()) {
                        sh "docker rm -f ${CONTAINER_NAME} || true"
                        sh "docker run -d -p ${PORT}:2025 -v ${DATA_VOLUME}:/app/data --name ${CONTAINER_NAME} ${IMAGE_NAME}:latest"
                    } else {
                        bat "docker rm -f ${CONTAINER_NAME} || exit 0"
                        bat "docker run -d -p ${PORT}:2025 -v %CD%\\data:/app/data --name ${CONTAINER_NAME} ${IMAGE_NAME}:latest"
                    }
                }
            }
        }

        stage('Postman/API Test (Optional)') {
            steps {
                echo "Here you could add Newman (Postman CLI) to run API tests"
            }
        }
    }

    post {
        always {
            echo "Pipeline finished. Check container logs if needed."
        }
    }
}
