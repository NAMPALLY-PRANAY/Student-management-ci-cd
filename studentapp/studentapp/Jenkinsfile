pipeline {
    agent any

    tools {
        maven 'Maven'   // Make sure Maven is installed in Jenkins (Manage Jenkins â†’ Global Tool Config)
        jdk 'JDK21'     // Configure JDK in Jenkins too
    }

    environment {
        IMAGE_NAME = "studentapp"
        CONTAINER_NAME = "studentapp"
        PORT = "2025"
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the repo
                git branch: 'main',
                    url: 'https://github.com/NAMPALLY-PRANAY/Student-management-ci-cd.git'
            }
        }

        stage('Build with Maven') {
            steps {
                // Navigate into the studentapp folder before building
                dir('studentapp/studentapp') {
                    sh './mvnw clean package -DskipTests'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('studentapp/studentapp') {
                    sh 'docker build -t ${IMAGE_NAME}:latest .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                dir('studentapp/studentapp') {
                    // Stop and remove old container if running
                    sh 'docker rm -f ${CONTAINER_NAME} || true'
                    // Run new container with volume mapping for persistent H2 DB
                    sh 'docker run -d -p ${PORT}:2025 -v $PWD/data:/app/data --name ${CONTAINER_NAME} ${IMAGE_NAME}:latest'
                }
            }
        }

        stage('Postman/API Test (optional)') {
            steps {
                echo "Here you could add Newman (Postman CLI) to run API tests"
            }
        }
    }
}
